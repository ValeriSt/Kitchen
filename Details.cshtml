@model MvcKitchen.ViewModel.ProductVM

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Details</title>
</head>
<body>

<div>
    <h4>Product</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Product.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Product.Title)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Product.Measure)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Product.Measure)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.SelectedRecipes)
        </dt>
        <dd class="col-sm-10">
            <select asp-for="SelectedRecipes" asp-items="Model.RecipeList" class="control-label" disabled="true"></select>
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Product.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
